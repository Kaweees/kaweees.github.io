{
  "name": "miguelvf.com",
  "version": "1.0.1",
  "private": false,
  "author": {
    "name": "Miguel Villa Floran",
    "url": "https://github.com/kaweees"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start:dev": "astro dev --host",
    "start": "astro dev --host",
    "build": "astro check && astro build && jampack ./dist",
    "preview": "astro preview --host",
    "sync": "astro sync",
    "astro": "astro",
    "lint": "prettier . --check && eslint --report-unused-disable-directives --max-warnings 0",
    "format": "prettier . --write --ignore-path .gitignore",
    "taze": "npx taze major -I",
    "taze:minor": "npx taze minor -w",
    "test": "pnpm commitlint --edit && pnpm format && pnpm lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/rss": "^4.0.12",
    "@resvg/resvg-js": "^2.6.2",
    "astro": "^5.10.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.20.1",
    "fuse.js": "^7.1.0",
    "github-slugger": "^2.0.0",
    "i": "^0.3.7",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.15.2",
    "sharp": "^0.34.2",
    "tailwind-merge": "^3.3.1",
    "taze": "^19.1.0",
    "typescript": "^5.8.3",
    "typewriter-effect": "^2.22.0"
  },
  "devDependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.4.1",
    "@astrojs/tailwind": "^6.0.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@divriots/jampack": "^0.33.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/github-slugger": "^2.0.0",
    "@types/react": "^19.1.8",
    "@typescript-eslint/parser": "^8.35.1",
    "astro-eslint-parser": "^1.2.2",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.30.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json,astro}": [
      "prettier --write --plugin=prettier-plugin-astro"
    ]
  }
}
